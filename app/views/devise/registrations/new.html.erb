<h2>Zarejestruj się by użyć aplikacji Auto Stop Race</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <%= f.input :first_name, label: false, placeholder: "Imię" %>
  <%= f.input :last_name, label: false, placeholder: "Nazwisko" %>
  <%= f.input :email, label: false, placeholder: "Email" %>
  <%= f.button :submit, "Zarejestruj", class: "btn" %>

<% end %>

<%= render "devise/shared/links" %>
