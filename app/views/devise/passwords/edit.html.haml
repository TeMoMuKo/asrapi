#devise
  %h2 Zmień hasło
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
    = f.error_notification
    = f.input :reset_password_token, as: :hidden
    = f.full_error :reset_password_token
    .form-inputs
      = f.input :password, label: false, placeholder: "Nowe hasło", required: true, autofocus: true, hint: ("min. #{@minimum_password_length} znaków" if @minimum_password_length)
      = f.input :password_confirmation, label: false, placeholder: "Potwierdź nowe hasło", required: true
    .form-actions
      = f.button :submit, "Zmień hasło"
  = render "devise/shared/links"
