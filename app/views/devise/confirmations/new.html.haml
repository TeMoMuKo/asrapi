#devise
  %h2 Wyślij ponownie email aktywacyjny
  = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
    = devise_error_messages!

    .field
      = f.email_field :email,placeholder: "Adres email", required: true, autofocus: true

    .actions
      = f.submit "Wyślij", class: "btn"

    = render "devise/shared/links"

